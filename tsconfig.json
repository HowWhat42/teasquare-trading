        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*"
    ],
